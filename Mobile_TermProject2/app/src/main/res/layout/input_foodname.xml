<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDFDE"
    tools:context=".MainActivity"
    android:id="@+id/activityFoodname">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/foodRetype"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#F56D91"
            android:text="다시 입력"
            android:textSize="20dp"
            android:fontFamily="@font/bm"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/foodname"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="음식 이름"
                android:textColor="#15133C"
                android:visibility="visible"
                android:fontFamily="@font/bm"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/foodChoose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#F56D91"
            android:text="선택"
            android:textSize="20dp"
            android:fontFamily="@font/bm"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 음식을 주문할까요?"
        android:textColor="#15133C"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14"
        android:fontFamily="@font/bm"/>

</androidx.constraintlayout.widget.ConstraintLayout>